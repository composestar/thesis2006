\RequirePackage{amsmath}
\RequirePackage{amssymb}
\RequirePackage{wasysym}% For \ocircle

% Logical operators
\newcommand*{\logNeg}{\neg}
\newcommand*{\logAnd}{\wedge}
\newcommand*{\logOr}{\vee}
\newcommand*{\logImplies}{\Rightarrow}
\newcommand*{\logEquiv}{\Leftrightarrow}

% Temporal operators
\newcommand*{\tmpNext}{\mathop{\ocircle}}
\newcommand*{\tmpGlobal}{\mathop{\Box}}
\newcommand*{\tmpFuture}{\mathop{\Diamond}}
\newcommand*{\tmpUntil}{\mathbin{\mathcal{U}}}% Strong until
\newcommand*{\tmpUnless}{\mathbin{\mathcal{W}}}% Weak until

